{
  "name": "nuvois-monorepo",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev:api": "pnpm --filter backend-api dev",
    "dev:app": "pnpm --filter mobile-app start",
    "dev:ai": "apps/ai-service/venv/bin/uvicorn app.main:app --reload --host 0.0.0.0 --port 8000 --app-dir apps/ai-service"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "cors": "^2.8.5"
  }
}